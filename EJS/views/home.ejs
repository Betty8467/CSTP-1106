    <style>
      html, body {
      min-height: 100%;
      padding: 0;
      margin: 0;
      font-family: Roboto, Arial, sans-serif;
      font-size: 14px;
      color: rgb(255, 255, 255);
      text-align: center;
      }

      h3 {
      margin: 0 0 20px;
      font-weight: 400;
      color: #ff0000;
      }

      .main-block {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      background: linear-gradient(45deg, #dfbfbf, #be5656);
      }

      form {
      padding: 120px;
      margin: 120px;
      box-shadow: 0 10px 20px #000000; 
      background: linear-gradient(45deg, #680505, #e00909);
      }

      .lowerbox {
        padding: 0px;
        margin: 1px;
        box-shadow: 0 2px 5px #f07474; 
        background: rgb(73, 36, 36); 

      }  

      .box1 {
        padding: 20px;
        margin: 1px;
        box-shadow: 0 2px 5px #f07474; 
        background: rgb(119, 91, 91); 
    
      }  

      .box2 {
        padding: 25px;
        margin: 1px;
        box-shadow: 0 2px 5px #f07474; 
        background: rgb(66, 54, 54); 
 
      } 

      span {
        position: absolute;
        left: 50%;
        top: 20%;
        transform: translate(-50%, -50%);
        display: block;
        color: #751e1e;
        font-size: 40px;
        letter-spacing: 5px;
        cursor:pointer;

        }

      span::before {
        content: "HotelBC";
        position: absolute;
        color: transparent;
        background-color: #5e0e0e;
        -webkit-background-clip: text;
        top: 0px;
        left: 0;
        z-index: -1;
        transition: 1s;
        
        }

      span::after {
        content: "HotelBC";
        position: absolute;
        color: transparent;
        background-color: #ffffff;
        -webkit-background-clip: text;
        top: 0px;
        left: 0px;
        transition: 1s;
        }

      span:hover:before {
        top: 10px;
        left: 10px;
        }

      span:hover:after {
        top: -10px;
        left: -10px;
        } 
       
      .fcc-btn {
        background-color: #721919;
        color: white;
        padding: 10px 20px;
        text-decoration: none;
        
      }

      .fcc-btn:hover {
        background-color: #dd4949;
      }

    </style>
  </head>
